<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/inputpane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ListView
            android:id="@+id/pairedlist"
            android:layout_width="318dp"
            android:layout_height="300dp"
            android:layout_marginTop="400dp"/>


        <Button
            android:id="@+id/btnConnection4Off"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="180dp"
            android:text="Connection 4 Off" />

        <Button
            android:id="@+id/btnConnection4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="120dp"
            android:text="Connection 4" />

        <Button
            android:id="@+id/btnConnection3Off"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:text="Connection 3 Off" />

        <Button
            android:id="@+id/btnConnection3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Connection 3" />
        <Button
            android:id="@+id/btnConnection2Off"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="60dp"
            android:text="Connection 2 Off" />

        <Button
            android:id="@+id/btnConnection2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="Connection 2" />

        <Button
            android:id="@+id/btnConnection1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Connection 1" />

        <Button
            android:id="@+id/btnConnection1Off"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Connection 1 Off" />

        <TextView
            android:id="@+id/status"
            android:layout_marginTop="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>